<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/image_personal_bac">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/iv_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/shape_bg_white_round_solid"
                android:gravity="center"
                android:text="小淘宝"
                android:textColor="#802d36"
                android:textSize="@dimen/text_size_20" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:alpha="0.5"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingTop="@dimen/dp5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/shangpin"
                    android:drawablePadding="@dimen/dp3"
                    android:text="全天上新"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/shenhe"
                    android:drawablePadding="@dimen/dp3"
                    android:text="100%人工审核"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/youhui"
                    android:drawablePadding="@dimen/dp3"
                    android:text="独家优惠"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp12"
            android:paddingTop="@dimen/dp10"
            android:text="我的淘宝"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <include layout="@layout/view_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mine_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/mine_order"
                android:gravity="center"
                android:text="淘宝订单"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

            <include layout="@layout/view_vertical_line" />

            <TextView
                android:id="@+id/tv_mine_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/mine_cart"
                android:gravity="center"
                android:text="购物车"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp6"
            android:background="@color/default_bg" />


        <TextView
            android:id="@+id/tv_mine_foot"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/mine_foot"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="我的足迹" />

        <include layout="@layout/view_horizontal_line" />

        <TextView
            android:id="@+id/tv_fankui"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/mine_fankui"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="意见反馈" />

        <include layout="@layout/view_horizontal_line" />

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/mine_service"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="联系客服" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp6"
            android:background="@color/default_bg" />

        <TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/mine_delete"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="清除缓存" />

        <include layout="@layout/view_horizontal_line" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/mine_share"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="分享App" />

        <include layout="@layout/view_horizontal_line" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/mine_update"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:text="版本升级" />

        <include layout="@layout/view_horizontal_line" />
    </LinearLayout>
</ScrollView>
